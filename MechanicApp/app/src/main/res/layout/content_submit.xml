<?xml version="1.0" encoding="utf-8"?>
<tools:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.androidsolutions.shivam.mechanix.submit"
    tools:showIn="@layout/activity_submit">

<TextView android:id="@+id/json"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:text="Please Get ready with your Aadhaar card.
Put QR code of card under the camera after pressing the registration button"
    android:gravity="center"
    android:textSize="16dip"/>



<android.support.v7.widget.AppCompatButton
    android:id="@+id/btnSub"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp"
    android:padding="12dp"
    android:text="Submit"/>
